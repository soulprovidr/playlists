{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@config": ["./src/_config"],
      "@database": ["./src/_database"],
      "@database/*": ["./src/database/*"],
      "@env": ["./src/_env"],
      "@jobs": ["./src/_jobs"],
      "@lib/*": ["./src/lib/*"],
      "@logger": ["./src/_logger"],
      "@modules/*": ["./src/modules/*"],
      "@tasks/*": ["./src/tasks/*"],
    },
  },
}
